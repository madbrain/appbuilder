  <body>

 <form class="form-horizontal">
 
#macro( inputText $widget )
#if ($widget.label)
 	<label for="${widget.name}" class="col-sm-2 control-label">${widget.label.content}</label>
 	<div class="col-sm-10">
#else
    <div class="col-sm-offset-2 col-sm-10">
#end
      <input type="text" class="form-control" id="${widget.name}">
    </div>
#end 
 
#foreach($line in $model.lines)
   <div class="form-group">
#foreach($widget in $line.widgets)
#inputText($widget)
#end
   </div>
#end
 
